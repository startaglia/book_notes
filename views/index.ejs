    <div class="container-fluid">
        <div class="p-5">
            <h2>form per cambio e add user</h2>
            <form action="/user" method="post">
                <% users.forEach(user => { %>
                    <button type="submit" class="btn" name="user" value="<%= (user.id)%>" id="<%= (user.id)%>" style="background-color: <%= user.color%>">
                        <%= user.name %>
                    </button>
                    <% }); %>
                    <button type="submit" class="btn btn-secondary ms-5" name="add" value="new">
                        Add new user
                    </button>
                    <button type="submit" class="btn btn-danger" name="remove" value="cancel">
                        Remove user
                    </button>
            </form>
        </div>
